/dts-v1/;

#include "loongson-2k1000.dtsi"

/ {
	compatible = "loongson,loongspn64r-2core-ls2k1000", "loongson,ls2k1000";
	model = "Loongson-2K Dual-Core Platform";

	aliases {
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};
};

&gmac0 {
	status = "okay";

	phy-mode = "rgmii-id";
	phy-handle = <&phy0>;
	mdio {
		compatible = "snps,dwmac-mdio";
		#address-cells = <1>;
		#size-cells = <0>;
		phy0: ethernet-phy@0 {
			reg = <0>;
		};
	};
};

&gmac1 {
	status = "okay";

	phy-mode = "rgmii-id";
	phy-handle = <&phy1>;
	mdio {
		compatible = "snps,dwmac-mdio";
		#address-cells = <1>;
		#size-cells = <0>;
		phy1: ethernet-phy@1 {
			reg = <0>;
		};
	};
};

&i2c2 {
	status = "okay";

	pinctrl-0 = <&i2c0_pins_default>;
	pinctrl-names = "default";
};

&spi0 {
	status = "okay";
};

&ehci0 {
	status = "okay";
};

&ohci0 {
	status = "okay";
};

&sata {
	status = "okay";
};

&uart0 {
	status = "okay";
};

&rtc0 {
	status = "okay";
};

&pctrl {
	status = "okay";

	sdio_pins_default: sdio-pins {
		sdio-pinmux {
			groups = "sdio";
			function = "sdio";
		};
		sdio-det-pinmux {
			groups = "pwm2";
			function = "gpio";
		};
	};

	pwm1_pins_default: pwm1-pins {
		pinmux {
			groups = "pwm1";
			function = "pwm1";
		};
	};

	pwm0_pins_default: pwm0-pins {
		pinmux {
			groups = "pwm0";
			function = "pwm0";
		};
	};

	i2c1_pins_default: i2c1-pins {
		pinmux {
			groups = "i2c1";
			function = "i2c1";
		};
	};

	i2c0_pins_default: i2c0-pins {
		pinmux {
			groups = "i2c0";
			function = "i2c0";
		};
	};

	nand_pins_default: nand-pins {
		pinmux {
			groups = "nand";
			function = "nand";
		};
	};

	hda_pins_default: hda-pins {
		grp0-pinmux {
			groups = "hda";
			function = "hda";
		};
		grp1-pinmux {
			groups = "i2s";
			function = "gpio";
		};
	};
};
